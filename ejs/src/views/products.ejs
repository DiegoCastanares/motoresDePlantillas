<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <% if (products) { %>
    <h1 class="text-center mt-5">Listado de Productos</h1>
    <div class="row justify-content-center">
      <a href="./" class="btn btn-secondary mt-2 col-2"
        >Ir al formulario de carga</a
      >
    </div>
    <div class="d-flex flex-wrap justify-content-center">
      <% products.forEach(product => { %>
      <div class="card m-5 border-0" style="width: 18rem">
        <img src="<%= product.thumbnail %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title text-center"><%= product.title %></h5>
          <p class="card-text text-center"><%= product.price %></p>
        </div>
      </div>
      <% }) %> <% } else { %>
      <h2 class="text-center my-5">No hay productos</h2>
    </div>
    <% } %>
  </body>
</html>
