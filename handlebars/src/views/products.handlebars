{{#if products}}
<h1 class="text-center mt-5">Listado de Productos</h1>
<div class="row justify-content-center">
 <a href="./" class="btn btn-secondary mt-2 col-2">Ir al formulario de carga</a>
    </div>
 <div class="d-flex flex-wrap justify-content-center">
  {{#each products}}
      <div class="card m-5 border-0" style="width: 25%;">
        <img src="{{this.thumbnail}}" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title text-center">{{this.title}}</h5>
          <p class="card-text text-center">{{this.price}}</p>
        </div>
      </div> 
  {{/each}}
{{else}}
  <h2 class="text-center my-5">No hay productos</h2>
    </div>
{{/if}}
